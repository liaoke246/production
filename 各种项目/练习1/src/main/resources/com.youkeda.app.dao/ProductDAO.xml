<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youkeda.app.dao.ProductDAO">
    <resultMap id="BaseResultMap" type="com.youkeda.app.dataobject.ProductDO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="price" jdbcType="DOUBLE" property="price"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="stock" jdbcType="INTEGER" property="stock"/>
        <result column="gmtCreated" jdbcType="TIMESTAMP" property="gmtCreated"/>
        <result column="gmtModified" jdbcType="TIMESTAMP" property="gmtModified"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.youkeda.category.dataobject.productDO">
    insert into product (price,stock,url,gmt_created,gmd_modified)
    values (#{price},#{stock},#{url},now(),now())

    </insert>


<select id=" selectById" resultMap="productResultMap">
select * from product where id = #{id}
</select>

<update id="updateStock" parameterType="com.youkeda.category.dataobject.productDO">
    update product set stock = #{stock}

</update>

</mapper>